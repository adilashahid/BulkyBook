@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center ">
                <h2 class="text-white py-2"> Delete Category</h2>
            </div>
        </div>
    </div>
    <div />
    <hr />
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
            
            <input asp-for="Id" hidden />

            <div class=" form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border shadow" />
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class=" form-floating py-2 col-12">
                <input asp-for="DisplayOrder" disbled class="form-control border shadow" />
                <label asp-for="DisplayOrder" class="ms-2"></label>

            </div>
            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control"> Delete</button>

                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back To List
                    </a>
                </div>
            </div>

        </div>
    </form>

</div>
</div>
